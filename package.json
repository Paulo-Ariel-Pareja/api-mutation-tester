{
  "name": "api-mutation-tester",
  "version": "1.0.0",
  "description": "API Mutation Testing Tool",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "overrides": {
    "dompurify": "^3.2.7"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run start:dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "cd packages/shared && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "test": "npm run test:shared && npm run test:backend && npm run test:frontend",
    "test:shared": "cd packages/shared && npm run test",
    "test:backend": "cd packages/backend && npm run test",
    "test:frontend": "cd packages/frontend && npm run test",
    "docker:dev": "docker-compose up -d",
    "docker:dev:build": "docker-compose build",
    "docker:dev:stop": "docker-compose down",
    "docker:dev:restart": "docker-compose restart",
    "docker:dev:logs": "docker-compose logs -f",
    "docker:dev:clean": "docker-compose down -v --rmi all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@nestjs/cli": "^11.0.10",
    "axios": "^1.12.2",
    "dompurify": "^3.2.7"
  }
}
